rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para estudiantes pendientes
    match /pendingStudents/{studentId} {
      allow read, write: if request.auth != null;
    }

    // Reglas para estudiantes aprobados
    match /approvedStudents/{studentId} {
      allow read, write: if request.auth != null;
    }

    // Reglas generales para otras colecciones
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
